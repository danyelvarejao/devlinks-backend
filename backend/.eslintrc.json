{
  "env": {
    "es2021": true,
    "node": true
  },

  "extends": [
    "love",
    "prettier"
  ],

  "plugins": [
    "prettier",
    "eslint-plugin-import-helpers"
  ],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },

  "rules": {
    "prettier/prettier": "warn",
    "@typescript-eslint/strict-boolean-expressions": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "always",
        "groups": [
          "module",
          "/^@/",
          ["parent", "sibling"],
          "index"
        ],
        "alphabetize": { "order": "asc", "ignoreCase": true }
      }
    ]
  }
}
